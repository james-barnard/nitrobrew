#!/usr/bin/env ruby
require 'beaglebone'

pin = ARGV[0]
puts "GPIOPin #{pin}"

PINS       = "/sys/kernel/debug/pinctrl/44e10800.pinmux"
CONFIG_PIN = "config-pin -q #{pin}"

puts   CONFIG_PIN
system CONFIG_PIN

puts "PINS"
system "cat #{PINS}/pinmux-pins | grep #{pin}"

puts "Pin Info"
info = Beaglebone::PINS[pin.to_sym]
puts info
puts "done"

